<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/linearColumnellipsesix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLoginScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/frameStackemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start">

                    <RelativeLayout
                        android:id="@+id/frameStackellipsesix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSkip"
                            android:layout_width="70dp"
                            android:layout_height="45dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/skip"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/button_bg"
                            app:cornerRadius="8dp"
                            tools:text="@string/skip" />


                        <LinearLayout
                            android:id="@+id/linearWelcomeBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="70dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtWelcomeBack"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@string/welcome_title"
                                android:textColor="@color/login_welcome_title"
                                android:textSize="30sp"
                                tools:text="@string/welcome_title" />

                            <TextView
                                android:id="@+id/txtLetsLoginA"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:ellipsize="end"
                                android:lineSpacingExtra="1dp"
                                android:singleLine="true"
                                android:text="@string/welcome_title_desc"
                                android:textColor="@color/login_welcome_sub"
                                android:textSize="16sp"
                                tools:text="@string/welcome_title_desc" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLoginFild"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearWelcomeBack"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/con_user_login"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="100dp"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/textview_layout_bg"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView_icon">

                                <ImageView
                                    android:id="@+id/imageView_user_login"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:contentDescription="@string/app_name"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:src="@drawable/user"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <View
                                    android:id="@+id/view_user_login"
                                    android:layout_width="0.5dp"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@color/view_login"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/imageView_user_login"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText_email_login"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="@color/transparent"
                                    android:hint="@string/email"
                                    android:inputType="textEmailAddress"
                                    android:singleLine="true"
                                    android:textColor="@color/textView_login_new"
                                    android:textColorHint="@color/textView_hint_login"
                                    android:textSize="16sp"
                                    android:theme="@style/editText_style_login"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/view_user_login"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/con_password_login"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/textview_layout_bg"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/con_user_login">

                                <ImageView
                                    android:id="@+id/imageView_password_login"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:contentDescription="@string/app_name"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="12dp"
                                    android:src="@drawable/password"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <View
                                    android:id="@+id/view_password_login"
                                    android:layout_width="0.5dp"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@color/view_login"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/imageView_password_login"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editText_password_login"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="@color/transparent"
                                    android:hint="@string/password"
                                    android:inputType="textPassword"
                                    android:singleLine="true"
                                    android:textColor="@color/textView_login_new"
                                    android:textColorHint="@color/textView_hint_login"
                                    android:textSize="16sp"
                                    android:theme="@style/editText_style_login"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/view_password_login"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linearRowrememberme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="horizontal">

                    <cn.refactor.library.SmoothCheckBox
                        android:id="@+id/checkbox_login"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        app:color_checked="@color/check_box_check_bg_login"
                        app:color_tick="@color/check_box_tick_login"
                        app:color_unchecked="@color/check_box_bg_login"
                        app:color_unchecked_stroke="@color/check_box_circle_login" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/textView_fp_login"
                        android:layout_toEndOf="@+id/checkbox_login"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtMe"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="0.46"
                            android:ellipsize="end"
                            android:lineSpacingExtra="1dp"
                            android:singleLine="true"
                            android:text="@string/remember_me"
                            android:textColor="@color/textView_login"
                            android:textSize="15sp"
                            tools:text="@string/remember_me" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView_fp_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="1dp"
                        android:singleLine="true"
                        android:text="@string/textView_forget_password"
                        android:textColor="@color/textView_login"
                        android:textSize="15sp"
                        tools:text="@string/textView_forget_password" />
                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_login"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/button_text_login"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@color/button_bg"
                    app:cornerRadius="25dp" />


                <RelativeLayout
                    android:id="@+id/linearRowPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="horizontal">

                    <cn.refactor.library.SmoothCheckBox
                        android:id="@+id/cbPrivacyTerms"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        app:color_checked="@color/check_box_check_bg_login"
                        app:color_tick="@color/check_box_tick_login"
                        app:color_unchecked="@color/check_box_bg_login"
                        app:color_unchecked_stroke="@color/check_box_circle_login" />

                    <TextView
                        android:id="@+id/textView_titleTerms_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:layout_toEndOf="@+id/cbPrivacyTerms"
                        android:ellipsize="end"
                        android:lineSpacingExtra="1dp"
                        android:singleLine="true"
                        android:text="@string/terms_title"
                        android:textColor="@color/textView_login"
                        android:textSize="14sp"
                        tools:text="@string/terms_title" />

                    <TextView
                        android:id="@+id/tvPrivacyTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:layout_toEndOf="@+id/textView_titleTerms_login"
                        android:ellipsize="end"
                        android:lineSpacingExtra="1dp"
                        android:singleLine="true"
                        android:text="@string/terms_of_use"
                        android:textColor="@color/textView_app_color"
                        android:textSize="14sp"
                        tools:text="@string/terms_of_use" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearColumnorcontinuewit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtOrcontinuewit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:lineSpacingExtra="1dp"
                        android:singleLine="true"
                        android:text="@string/continue_with"
                        android:textColor="@color/textView_login"
                        android:textSize="17sp"
                        tools:text="@string/continue_with" />

                    <LinearLayout
                        android:id="@+id/linearRowfacebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rel_google_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/button_google_bg"
                            android:gravity="center"
                            android:padding="15dp">

                            <ImageView
                                android:id="@+id/imageView_google_login"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/google_ic" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/textView_google_login"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="8dp"
                                android:layout_toEndOf="@+id/imageView_google_login"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/google_login"
                                android:textColor="@color/textView_login"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/frameStackellipseeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtConfirmation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="50dp"
                            android:lineSpacingExtra="1dp"
                            android:singleLine="true"
                            android:text="@string/dont_have_an_account"
                            android:textColor="@color/textView_login"
                            android:textSize="17sp"
                            tools:text="@string/dont_have_an_account" />

                        <TextView
                            android:id="@+id/tvSignUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="50dp"
                            android:lineSpacingExtra="1dp"
                            android:singleLine="true"
                            android:text="@string/button_text_register"
                            android:textColor="@color/textView_app_color"
                            android:textSize="17sp"
                            tools:text="@string/button_text_register" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
