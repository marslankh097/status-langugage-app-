<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_subCat_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_image_subCat_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView_subCat_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_landscape" />

        </RelativeLayout>

        <View
            android:id="@+id/view_subCat_adapter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/image_thumb_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/rel_image_subCat_adapter" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/sub_cat_bg"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingTop="5dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rel_image_subCat_adapter">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textView_title_subCat_adapter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/textView_title_adapter"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/cardView_subCatName_adapter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView_view_subCat_adapter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/view"
                app:layout_constraintEnd_toStartOf="@+id/textView_view_subCat_adapter"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_title_subCat_adapter"
                app:tint="@color/image_color" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textView_view_subCat_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:text=""
                android:textColor="@color/textView_adapter"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_view_subCat_adapter"
                app:layout_constraintEnd_toStartOf="@+id/imageView_like_subCat_adapter"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView_view_subCat_adapter"
                app:layout_constraintTop_toTopOf="@+id/imageView_view_subCat_adapter" />

            <ImageView
                android:id="@+id/imageView_like_subCat_adapter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/like_ic"
                app:layout_constraintBottom_toBottomOf="@+id/textView_view_subCat_adapter"
                app:layout_constraintEnd_toStartOf="@+id/textView_like_subCategory_adapter"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView_view_subCat_adapter"
                app:layout_constraintTop_toTopOf="@+id/textView_view_subCat_adapter" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textView_like_subCategory_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:text=""
                android:textColor="@color/textView_adapter"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_like_subCat_adapter"
                app:layout_constraintEnd_toStartOf="@+id/imageView_fav_subCat_adapter"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView_like_subCat_adapter"
                app:layout_constraintTop_toTopOf="@+id/imageView_like_subCat_adapter" />

            <ImageView
                android:id="@+id/imageView_fav_subCat_adapter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/ic_fav"
                app:layout_constraintBottom_toBottomOf="@+id/textView_like_subCategory_adapter"
                app:layout_constraintEnd_toStartOf="@+id/cardView_subCatName_adapter"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView_like_subCategory_adapter"
                app:layout_constraintTop_toTopOf="@+id/textView_like_subCategory_adapter" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView_subCatName_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/cat_name_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textView_cat_subCat_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/textView_cat_adapter"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView_type_subCat_adapter"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/video_ic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>